{
  "typeAcquisition": {
    "enable": true
  },
  "compilerOptions": {
    "noEmit": true,
    "target": "es5",
    "module": "esnext",
    "lib": [
      "es6",
      "dom",
      "es2017"
    ],
    "allowJs": true,
    "checkJs": true,
    "jsx": "preserve",
    "strict": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "noImplicitAny": false,
    "noUnusedLocals": true,
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "isolatedModules": true
  },
  "exclude": [
    "node_modules",
    "dist",
    "lib",
    "/src/serviceWorker.js"
  ],
  "include": [
    "src"
  ]
}
